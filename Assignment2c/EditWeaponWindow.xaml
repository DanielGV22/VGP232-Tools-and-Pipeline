<Window x:Class="Assignment2c.EditWeaponWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Weapon" Height="520" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Weapon Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Name -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- Type -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox x:Name="TypeComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- Image -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Image URL:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox x:Name="ImageTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- Rarity -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Rarity (stars):" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox x:Name="RarityComboBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- BaseAttack -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Base Attack:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox x:Name="BaseAttackTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- Secondary Stat -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Secondary Stat:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox x:Name="SecondaryStatTextBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- Passive -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Passive:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox x:Name="PassiveTextBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"/>

            <!-- Validation / hints -->
            <TextBlock Grid.Row="7" Grid.ColumnSpan="2" Foreground="DarkRed" TextWrapping="Wrap"
                       x:Name="ErrorTextBlock" />
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button x:Name="GenerateButton" Content="Generate (Bonus)" Width="130" Margin="0,0,10,0"
                    Click="GenerateClicked"/>
            <Button x:Name="SubmitButton" Content="Save" Width="90" Margin="0,0,10,0"
                    Click="SubmitClicked"/>
            <Button Content="Cancel" Width="90" Click="CancelClicked"/>
        </StackPanel>
    </Grid>
</Window>


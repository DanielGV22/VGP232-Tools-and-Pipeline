<Window x:Class="Assignment2c.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weapon Collection Editor" Height="600" Width="980">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Load" Width="90" Margin="0,0,8,0" Click="LoadClicked"/>
            <Button Content="Save" Width="90" Margin="0,0,18,0" Click="SaveClicked"/>

            <TextBlock Text="Type Filter:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="FilterTypeOnlyComboBox" Width="160"
                      SelectionChanged="FilterTypeOnlySelectionChanged"/>

            <Separator Width="18" Opacity="0"/>

            <Button Content="Add" Width="90" Margin="0,0,8,0" Click="AddClicked"/>
            <Button Content="Edit" Width="90" Margin="0,0,8,0" Click="EditClicked"/>
            <Button Content="Remove" Width="90" Click="RemoveClicked"/>
        </StackPanel>

        <!-- Left: List -->
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Weapons" Margin="0,0,10,0">
            <Grid Margin="10">
                <ListBox x:Name="WeaponListBox"
                 SelectionChanged="WeaponListBox_SelectionChanged"/>

            </Grid>
        </GroupBox>

        <!-- Right: Sort -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Sort">
            <StackPanel Margin="10">
                <TextBlock Text="Sort by:" Margin="0,0,0,8"/>

                <RadioButton Content="Name" GroupName="SortGroup"
                             IsChecked="True" Checked="SortRadioSelected"/>
                <RadioButton Content="Type" GroupName="SortGroup"
                             Checked="SortRadioSelected"/>
                <RadioButton Content="Rarity" GroupName="SortGroup"
                             Checked="SortRadioSelected"/>
                <RadioButton Content="BaseAttack" GroupName="SortGroup"
                             Checked="SortRadioSelected"/>

                <TextBlock Margin="0,18,0,0"
                           Text="Tip: Select an item then click Edit to modify it."/>
                <Image x:Name="WeaponImage"
                       Height="220"
                       Margin="0,20,0,0"
                       Stretch="Uniform"
                                       />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

